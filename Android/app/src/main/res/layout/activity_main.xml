<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">



    <LinearLayout
        android:id="@+id/intro_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/taitou"
            android:background="@drawable/taitou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:layout_gravity="top"
        />
        <LinearLayout
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal"
            android:gravity="center"
            />
        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </SearchView>



        <LinearLayout
            android:id="@+id/tubiao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shubiao"
                android:background="@drawable/shubiao"
                style="@style/style_tubiao">
            </ImageView>

            <ImageView
                android:id="@+id/weixin"
                android:background="@drawable/weixin"
                style="@style/style_tubiao">
            </ImageView>

            <ImageView
                android:id="@+id/huojian"
                android:background="@drawable/huojian"
                style="@style/style_tubiao">
            </ImageView>

            <ImageView
                android:id="@+id/bi"
                android:background="@drawable/bi"
                style="@style/style_tubiao">
            </ImageView>



        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            
            <TextView
                android:textSize="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:text="@string/shubiao"
                android:gravity="center">
            </TextView>

            <TextView
                android:textSize="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:text="@string/weixin"
                android:gravity="center">
            </TextView>

            <TextView
                android:textSize="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:text="@string/huojian"
                android:gravity="center">
            </TextView>

            <TextView
                android:textSize="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:text="@string/bi"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_layout"
        android:layout_above="@+id/rg_main">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zhuti1"
                    android:src="@drawable/zhujiemian4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/biankuang_hui"/>

                <ImageView
                    android:id="@+id/zhuti2"
                    android:src="@drawable/zhujiemian5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/biankuang_hui"/>


            </LinearLayout>
        </ScrollView>
    </FrameLayout>







    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <RadioButton
            android:id="@+id/zhuye"
            style="@style/rb_style"
            android:drawableTop="@drawable/shouye"
            android:layout_height="50dp"
            android:text="@string/home">
        </RadioButton>

        <RadioButton
            android:id="@+id/idea"
            style="@style/rb_style"
            android:drawableTop="@drawable/idea"
            android:layout_height="50dp"
            android:text="@string/idea">
        </RadioButton>

        <RadioButton
            android:id="@+id/fabu"
            style="@style/rb_style_publish"
            android:drawableTop="@drawable/wenzhang"

            android:layout_height="60dp"
            android:text="@string/publish">
        </RadioButton>

        <RadioButton
            android:id="@+id/anli"
            style="@style/rb_style"
            android:drawableTop="@drawable/anli"
            android:layout_height="50dp"
            android:text="@string/project">
        </RadioButton>

        <RadioButton

            android:id="@+id/geren"
            style="@style/rb_style"
            android:drawableTop="@drawable/person"
            android:layout_height="50dp"
            android:text="@string/person">
        </RadioButton>


    </RadioGroup>








</RelativeLayout>